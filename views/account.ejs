<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <title>As the Crow Flies</title>
</head>
<body>

    <nav class="navbar bg-body-tertiary navbar-messaging d-flex flex-row justify-content-between">
      <div class="container">
          <a class="navbar-brand col-3" href="#">
            <img src="/images/crowb.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
            <h3 class="d-inline-block">As the Crow Flies</h3>
          </a>
          <h3 class="text-center col-3 username-title"></h3>
          <div class="col-3">
            <div class="dropdown">
              <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Menu
              </button>
              <ul class="dropdown-menu dropdown-menu-dark">
                <li><a class="dropdown-item" href="#">Home</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="../">Logout</a></li>
              </ul>
            </div>
          </div>
      </div>
    </nav>

  <div class="container">
    <div class="row justify-content-around">
        <div class="col-6  account-content">
            
            <div class="account-title d-flex flex-row justify-content-between">
                <div class="text-center ms-3 flex-grow-1">
                    <h2 class="account-username"><%= Username %></h2>
                </div>
                <button type="button" class="btn btn-primary me-3" data-bs-toggle="modal" data-bs-target="#username">
                    Change Username
                </button>
            </div>

            <div class="account-sub d-flex flex-row justify-content-between ms-3 me-3">
                <div class="text-start">
                    <p class="account-heading">Name</p>
                    <h4><%= FirstName + " " + LastName %></h4>
                </div>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#name">
                    Change Name
                </button>
            </div>

            <div class="line"></div>

            <div class="account-sub d-flex flex-row justify-content-between ms-3 me-3">
                <div class="text-start">
                    <p class="account-heading">Email</p>
                    <h4><%= Email%></h4>
                </div>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#email">
                    Change Email
                </button>
            </div>

            <div class="line"></div>

            <div class="account-sub d-flex flex-row justify-content-between ms-3 me-3">
                <div class="text-start">
                    <p class="account-heading">Password</p>
                    <h4><%= Password %></h4>
                </div>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#password">
                    Change Password
                </button>
            </div>
            
        </div>
    </div>
  </div>

    <!-- Modals -->
    <!-- Username Modal -->
<div class="modal fade" id="username" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/home/account/name" method="post">
            <div class="modal-body">
                <input type="text" id="fName" class="form-control entry"
                placeholder="Type first name here" name="fName" required>
                <label for="fName">First Name</label>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button class="btn btn-primary" type="submit">Save changes</button>
            </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Name Modal -->
<div class="modal fade" id="name" tabindex="-1" aria-labelledby="Change Name" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Change Name</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/home/account/name" method="post">
            <div class="modal-body">
                <input type="text" id="fName" class="form-control entry"
                placeholder="Type first name here" name="fName" required>
                <label for="fName">First Name</label>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button class="btn btn-primary" type="submit">Save changes</button>
            </div>
        </form>
      </div>
    </div>
  </div>

    <!-- Email Modal -->
<div class="modal fade" id="email" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/home/account/name" method="post">
            <div class="modal-body">
                <input type="text" id="fName" class="form-control entry"
                placeholder="Type first name here" name="fName" required>
                <label for="fName">First Name</label>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button class="btn btn-primary" type="submit">Save changes</button>
            </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Password Modal -->
<div class="modal fade" id="password" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/home/account/name" method="post">
            <div class="modal-body">
                <input type="text" id="fName" class="form-control entry"
                placeholder="Type first name here" name="fName" required>
                <label for="fName">First Name</label>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button class="btn btn-primary" type="submit">Save changes</button>
            </div>
        </form>
      </div>
    </div>
  </div>

  <footer class="navbar bg-body-tertiary footer-messaging d-flex flex-column-reverse">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img src="/images/crowb.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
        As the Crow Flies
      </a>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js" integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js" integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ" crossorigin="anonymous"></script>
  
</body>
</html>